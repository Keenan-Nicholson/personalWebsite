</Layout>
<style>
  html {
    margin: 0;
    background-image: linear-gradient(45deg, #0e0b16, #091929);
  }
  body {
    font-family: "Source Sans Pro", sans-serif;
    color: white;
  }
  .wrapper {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    width: 100vw;
    height: 100vh;
  }
  .desktop-nav {
    display: flex;
    justify-content: space-around;
    align-items: center;
    width: 100vw;
    height: 7rem;
    position: fixed;
    background-image: linear-gradient(180deg, #0e0b16, #091929);
  }
  .content {
    width: 40rem;
    height: 40rem;
    margin-top: 19rem;
    padding: 1rem;
    order: 0;
  }
  .slide_show {
    width: 25rem;
    height: 25rem;
    margin-top: 19rem;
    border-radius: 1.25rem;
    box-shadow: 1px 5px 10px 10px rgba(161, 136, 249, 0.2);
    order: 1;
  }
  h1 {
    font-size: 3.9rem;
    margin-top: 1rem;
    margin-bottom: 1rem;
    text-shadow: rgba(161, 136, 249) -40px 3px 200px;
  }

  a {
    font-size: 1.5rem;
    font-weight: 600;
    text-decoration: none;
    color: white;
  }
  a:hover {
    opacity: 0.8;
  }
  i {
    margin: 2rem;
    font-size: 2.5rem;
  }
  .hamburger {
    align-self: flex-start;
    margin-left: auto;
    width: 35px;
    cursor: pointer;
    appearance: none;
    background: none;
    outline: none;
    border: none;
    z-index: 99;
  }
  .hamburger:hover {
    opacity: 0.8;
  }
  .hamburger .bar,
  .hamburger:after,
  .hamburger:before {
    content: "";
    display: block;
    width: 100%;
    height: 5px;
    background-color: white;
    margin: 6px 0px;
    transition: 0.4s;
  }
  .hamburger.is-active:before {
    transform: rotate(-45deg) translate(-8px, 6px);
  }
  .hamburger.is-active:after {
    transform: rotate(45deg) translate(-9px, -8px);
  }
  .hamburger.is-active .bar {
    opacity: 0;
  }
  .mobile-nav {
    position: fixed;
    top: 0;
    left: 100%;
    width: 100%;
    min-height: 100vh;
    padding-top: 120px;
    transition: 0.4s;
    background-image: linear-gradient(45deg, #0e0b16, #091929);
  }
  .mobile-nav.is-active {
    left: 0;
  }
  .mobile-nav a {
    display: block;
    margin: 0 auto 16;
    text-align: center;
    padding: 12px 16px;
  }

  @media (min-width: 768px) {
    .mobile-nav {
      display: none;
    }
    .hamburger {
      display: none;
    }
  }
  @media (max-width: 767px) {
    .desktop-nav {
      display: none;
    }
  }
</style>
<script>
  window.onload = function () {
    const menu_btn = document.querySelector(".hamburger");
    const mobile_menu = document.querySelector(".mobile-nav");

    menu_btn.addEventListener("click", function () {
      menu_btn.classList.toggle("is-active");
      mobile_menu.classList.toggle("is-active");
    });
  };
</script>
