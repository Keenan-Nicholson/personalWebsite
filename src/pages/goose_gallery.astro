const chunkedImages = [...chunks(gooseImages, 3)];
---

<main>
  <Layout title="Keenan Nicholson - Goose Gallery">
    <div class="wrapper">
      <button class="hamburger">
        <div class="bar"></div>
      </button>
      <nav class="desktop-nav">
        <a href="../index">Home</a>
        <a href="../about">About</a>
        <a href="../portfolio">Portfolio</a>
        <a href="../goose_gallery">Goose Gallery</a>
      </nav>
      <nav class="mobile-nav">
        <a href="./">Home</a>
        <a href="../about">About</a>
        <a href="../portfolio">Portfolio</a>
        <a href="../goose_gallery">Goose Gallery</a>
      </nav>
      <div class="content">
        {
          chunkedImages.map((gooseImages) => (
            <div>
              {gooseImages.map((gooseImage) => (
                <div class="imgContainer">
                  <Image
                    src={import(
                      /* @vite-ignore */ `../images/${gooseImage}.jpeg`
                    )}
                    alt=""
                  />
                </div>
              ))}
            </div>
          ))
        }
      </div>
    </div>
  </Layout>
</main>

<style>
  html {
    margin: 0;
    background-image: linear-gradient(45deg, #0e0b16, #091929);
  }
  body {
    font-family: "Source Sans Pro", sans-serif;
    color: white;
  }
  .wrapper {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    width: 100vw;
    height: 100vh;
  }
  .desktop-nav {
    display: flex;
    justify-content: space-around;
    align-items: center;
    width: 100vw;
    height: 7rem;
    position: fixed;
    background-image: linear-gradient(180deg, #0e0b16, #091929);
  }
  a {
    font-size: 1.5rem;
    font-weight: 600;
    text-decoration: none;
    color: white;
  }
  a:hover {
    opacity: 0.8;
  }
  .content {
    margin-top: 6rem;
  }
  .imgContainer {
    float: left;
    margin-left: 2rem;
    margin-top: 3rem;
  }
  .imgContainer img {
    max-width: 400px;
    max-height: 600px;
    object-fit: cover;
    box-shadow: 0px 5px 10px 10px rgba(161, 136, 249, 0.1);
    border-radius: 10px;
  }
  .hamburger {
    align-self: flex-start;
    position: relative;
    margin-left: auto;
    width: 35px;
    cursor: pointer;
    appearance: none;
    background: none;
    outline: none;
    border: none;
    z-index: 99;
  }
  .hamburger:hover {
    opacity: 0.8;
  }
  .hamburger .bar,
  .hamburger:after,
  .hamburger:before {
    content: "";
    display: block;
    width: 100%;
    height: 5px;
    background-color: white;
    margin: 6px 0px;
    transition: 0.4s;
  }
  .hamburger.is-active:before {
    transform: rotate(-45deg) translate(-8px, 6px);
  }
  .hamburger.is-active:after {
    transform: rotate(45deg) translate(-9px, -8px);
  }
  .hamburger.is-active .bar {
    opacity: 0;
  }
  .mobile-nav {
    position: fixed;
    top: 0;
    left: 100%;
    width: 100%;
    min-height: 100vh;
    padding-top: 120px;
    transition: 0.4s;
    background-image: linear-gradient(45deg, #0e0b16, #091929);
  }
  .mobile-nav.is-active {
    left: 0;
  }
  .mobile-nav a {
    display: block;
    margin: 0 auto 16;
    text-align: center;
    padding: 12px 16px;
  }

  @media (min-width: 768px) {
    .mobile-nav {
      display: none;
    }
    .hamburger {
      display: none;
    }
  }
  @media (max-width: 767px) {
    .desktop-nav {
      display: none;
    }
    .imgContainer img {
      max-width: 330px;
      max-height: 450px;
    }
  }
</style>
<script>
  window.onload = function () {
    const menu_btn = document.querySelector(".hamburger");
    const mobile_menu = document.querySelector(".mobile-nav");

    menu_btn.addEventListener("click", function () {
      menu_btn.classList.toggle("is-active");
      mobile_menu.classList.toggle("is-active");
    });
  };
</script>
